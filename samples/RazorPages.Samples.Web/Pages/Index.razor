@using System
@using System.Collections.Generic
@using System.Reflection
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Mvc.Rendering
@using RazorPages.Samples.Web
@model Customer
@inject IHtmlHelper<Customer> Html

@functions {
    
    public IEnumerable<Customer> ExistingCustomers { get; set; }

    public async Task OnGetAsync()
    {
        ExistingCustomers = GetCustomers();
    }

    public async Task<IActionResult> OnPost(Customer customer)
    {
        if (ModelState.IsValid)
        {
            AddCustomer(customer);
            return Redirect("/");
        }

        ExistingCustomers = GetCustomers();
        return View(customer);
    }
}
<html>
    <head>
        <title>All about interesting people</title>
    </head>
    <body>
        <div>
        <h1>Customers</h1>
        <ul>
        @foreach (var customer in ExistingCustomers)
        {
            <li>@customer.Id - @customer.Name</li>
        }
        </ul>
        </div>
        <form method="POST">
            @Html.ValidationSummary()
            <span>@Html.LabelFor(m => m.Name)</span> @Html.EditorFor(m => m.Name)
            <input type="submit" value="Add Customer"/>
        </form>
    </body>
</html>